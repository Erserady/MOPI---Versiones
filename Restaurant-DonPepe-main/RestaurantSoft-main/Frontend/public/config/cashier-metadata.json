{
  "appName": "RestaurantSoft",
  "module": "cashier",
  "version": "1.0.0",
  "environment": "development",
  "locale": "es-NI",
  "currency": {
    "code": "NIO",
    "symbol": "C$",
    "format": "C${amount}"
  },
  "api": {
    "baseUrl": "/api",
    "endpoints": {
      "orders": {
        "list": "/caja/pedidos",
        "create": "/caja/pedidos",
        "update": "/caja/pedidos/{id}",
        "close": "/caja/pedidos/{id}/cerrar"
      },
      "payments": {
        "charge": "/caja/pagos",
        "refund": "/caja/pagos/{id}/reversa"
      },
      "products": {
        "list": "/caja/productos-disponibles"
      }
    }
  },
  "cashier": {
    "taxRate": 0.0,
    "serviceCharge": 0.0,
    "paymentMethods": ["EFECTIVO", "TARJETA", "TRANSFERENCIA"],
    "receipt": {
      "header": "Restaurante Don Pepe",
      "footer": "Â¡Gracias por su preferencia!"
    }
  },
  "navigation": [
    { "title": "Pedidos", "section": "orders", "visible": true },
    { "title": "Caja", "section": "cashier", "visible": true }
  ],
  "permissions": {
    "canApplyDiscounts": true,
    "canVoidOrders": false
  }
}
